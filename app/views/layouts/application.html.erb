<!DOCTYPE html>
<html>
  <head>
    <title>ReCommend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

		<link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Proza+Libre:ital,wght@1,600&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div class="navbar sticky">
			<ul>
				<% if logged_in? %>
				<li class="separate"><%= link_to "New Recommendation", new_recommend_path %></li>
				<li><%= link_to "Home", recommends_path %></li>
				<li><%= link_to current_user.username, user_recommends_path(current_user) %></li>
				<div class="dropdown">
					<button class="dropbtn">Browse</button>
					<div class="dropdown-content">
						<li><%= link_to "Users", users_path %></li>
						<li><%= link_to "Brands", brands_path %></li>
						<li><%= link_to "Categories", categories_path %></li>
					</div>
				</div>
				<li style="float:right"><%= link_to "Logout", logout_path, method: 'delete' %></li>
				<% end %>
			</ul>
		</div>
		<div class="wrapper">
			<% flash.each do |type, msg| %>
  			<div class="<%= type %>">
    			<%= msg %>
  			</div>
			<% end %>

			<div class="flexbox">
				<%= yield %>
			</div>


		</div>
  </body>
</html>
