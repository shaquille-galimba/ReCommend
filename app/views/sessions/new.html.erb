<h1>Login Page</h1>

<div>
	<%= form_for :user do |f| %>
		<div>
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>
		<br>
		<div>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<br>
		<div>
			<%= f.submit "Login" %>
		</div>
	<% end %>
</div>
