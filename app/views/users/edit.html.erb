<h1>Edit <%= @user.username %>'s info</h1>

<%= render partial: "shared/errors", locals: {object: @user} %>

<div class="form">
	<%= form_for @user do |f| %>
		<div>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<br>
		<div>
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>
		<br>
		<%= f.submit 'Edit', class: "btn button-blue" %>
	<% end %>
</div>
