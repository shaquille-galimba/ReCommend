<h1>Edit <%= @user.username %>'s info</h1>

<% if @user.errors.any? %>
 <% @user.errors.full_messages.each do |message| %>
 	<li><%= message %></li>
	<% end %>
<% end %>

<div class="form">
	<%= form_for @user do |f| %>
		<div>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<br>
		<div>
			<%= f.label :username %>
			<%= f.text_field :username %>
		</div>
		<br>
		<%= f.submit 'Edit', class: "btn button-blue" %>
	<% end %>
</div>
