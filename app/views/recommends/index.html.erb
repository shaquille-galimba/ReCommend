<h1>Welcome to ReCommend!</h1>
<% if !logged_in? %>
	<h3><%= link_to "Log in", login_path, class: "links" %> or <%= link_to "Sign up", signup_path, class: "links" %> to make your first recommendation!</h3>
<% end %>
<br>
<% @recommends.each do |recommend| %>
	<ul class="lists">
		<h2><%= link_to recommend.user_name, user_path(recommend.user), class: "links" %> recommends <%= recommend.brand_name %></h2>
		<p><%= recommend.comment %></p>
	</ul>
<% end %>
