<h1>Update your recommendation for <%= @recommend.brand_name %></h1>
<div class="form">
	<%= form_for @recommend do |f| %>
	<div>
		<%= f.label :comment %>
		<%= f.text_area :comment %>
	</div>
	<br>
	<div>
		<%= f.submit "Recommend", class: "btn button-blue" %>
	</div>
	<% end %>
</div>
